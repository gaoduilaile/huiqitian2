<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="${yunju.com.huiqitian}.${MainMenu}"
    >


    <FrameLayout
        android:id="@+id/fl_menu_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_menu_line"
        android:layout_below="@+id/v_line" />

    <TextView
        android:id="@+id/tv_menu_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_above="@+id/ll_menu"
        android:background="@color/color_menu_btm_line" />

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_menu_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/home_menu_selector"
            android:gravity="center"
            android:text="@string/str_menu_home"
            android:textColor="@color/color_menu_btm_default"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_menu_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/class_menu_selector"
            android:gravity="center"
            android:text="@string/str_menu_class"
            android:textColor="@color/color_menu_btm_default"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_menu_sopcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/sopcart_menu_selector"
            android:gravity="center"
            android:text="@string/str_menu_sopcart"
            android:textColor="@color/color_menu_btm_default"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_menu_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/person_menu_selector"
            android:gravity="center"
            android:text="@string/str_menu_person"
            android:textColor="@color/color_menu_btm_default"
            android:textSize="12dp" />

    </LinearLayout>


</RelativeLayout>
