<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="191dp"
    android:layout_marginTop="@dimen/y2"
    android:background="@color/color_login_btn">
    <!--商品图片-->
    <ImageView
        android:id="@+id/img_sales_home"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y2" />
    <!--商品名称-->
    <TextView
        android:id="@+id/tv_name_sales_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_sales_home"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:singleLine="true"
        android:textColor="@color/color_title_text"
        android:textSize="12sp" />
    <!--商品价格单位-->
    <LinearLayout
        android:id="@+id/ll_item_sales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:visibility="visible">
        <!--￥-->
        <TextView
            android:id="@+id/tv_sign_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_find_result_dollar"
            android:textColor="@color/btn_getMessage_register"
            android:textSize="10sp"
            android:textStyle="bold" />
        <!--价格-->
        <TextView
            android:id="@+id/tv_price_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_getMessage_register"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y2"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <!--积分数-->
        <TextView
            android:id="@+id/tv_item_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3999"
            android:textColor="@color/btn_getMessage_register"
            android:textSize="14dp" />
        <!--积分-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x3"
            android:text="积分"
            android:textColor="@color/color_999999"
            android:textSize="14dp" />

    </LinearLayout>
</RelativeLayout>
