<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_title_back" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <yunju.com.huiqitian.vm.widget.MyListView
                android:id="@+id/mlv_receiver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                android:divider="@color/color_f5f5f5"
                android:dividerHeight="14dp"/>

            <TextView
                android:id="@+id/tv_receiver_address"
                android:layout_width="193dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_exist_account"
                android:gravity="center"
                android:text="@string/btn_add_receiver_address"
                android:textColor="@color/tv_exist_account"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>