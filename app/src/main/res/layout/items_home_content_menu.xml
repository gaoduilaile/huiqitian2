<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- 标题  ： 每日精选-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/color_f5f5f5"
        android:gravity="center">

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_3eb8fb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="每日精选"
            android:textColor="@color/color_3eb8fb"
            android:textSize="14sp" />

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_3eb8fb" />
    </LinearLayout>


    <include
        android:visibility="gone"
        android:id="@+id/rl_third_layout"
        layout="@layout/items_home_content_menu_thrid">
    </include>

    <include
        android:visibility="gone"
        android:id="@+id/rl_second_layout"
        layout="@layout/items_home_content_menu_second">
    </include>
    <include
        android:id="@+id/rl_first_layout"
        layout="@layout/items_home_content_menu_first">
    </include>






</LinearLayout>