<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="333dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@mipmap/img_back_voucher">
        <!-- 地区显示-->
        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageView
                android:background="@mipmap/supermarket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <TextView
                android:id="@+id/tv_voucher_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_333333"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_voucher_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:text="  查看使用规则"
                android:textSize="14sp"
                android:textColor="@color/color_e51c23"/>
        </LinearLayout>

        <!-- 金额-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="76dp"
            android:text="￥"
            android:textColor="@color/color_333333"
            android:textSize="10sp" />
        <!-- 显示金额-->
        <TextView
            android:id="@+id/tv_voucher_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="57dp"
            android:textColor="@color/color_333333"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- 显示使用条件-->
        <TextView
            android:id="@+id/tv_voucher_item_can_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="94dp"
            android:text="满￥9999使用"
            android:textColor="@color/color_333333"
            android:textSize="10sp" />

        <!-- 显示使用时间-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="64dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用期限  "
                android:textColor="@color/color_999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_voucher_item_use_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.06.06 - 2016.08.08"
                android:textColor="@color/color_999999"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- 显示使用范围-->
        <TextView
            android:id="@+id/tv_voucher_item_can_use_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="86dp"
            android:text="点击查看可使用券的商品"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <!-- 已过期显示-->
        <ImageView
            android:id="@+id/iv_voucher_item_yiguoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/yiguoqi"
            android:visibility="invisible" />

        <!-- 已使用显示-->
        <ImageView
            android:id="@+id/iv_voucher_item_yishiyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginRight="12dp"
            android:background="@mipmap/yishiyong"
            android:visibility="invisible" />
    </FrameLayout>

</FrameLayout>

