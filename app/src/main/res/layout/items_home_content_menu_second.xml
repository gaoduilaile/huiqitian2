<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rl_goods_one_second"
            android:layout_width="@dimen/x156"
            android:layout_height="@dimen/y58"
            android:layout_marginLeft="@dimen/dimen_3"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tv_home_goods_one_second"
                style="@style/text_home_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="29dp"
                android:maxEms="6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_home_goods_one_second"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView style="@style/text_home_money_icon" />

                <TextView
                    android:id="@+id/tv_goods_one_money_second"
                    style="@style/text_home_money"
                    android:layout_marginLeft="@dimen/dimen_2" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_goods_one_pic_second"
                android:layout_width="@dimen/x63"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="2dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_first" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
