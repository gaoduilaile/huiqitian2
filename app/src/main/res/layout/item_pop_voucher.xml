<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--代金券金额-->
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_voucherPop_bigPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/color_e51c23"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_voucherPop_smallPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".00元"
                    android:textColor="@color/color_e51c23"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_voucherPop_fulfilPrice"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_send_free"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="10sp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/used_data"/>
                <TextView
                    android:id="@+id/tv_voucherPop_useDate"
                    android:layout_marginBottom="8dp"
                    android:textSize="10sp"
                    android:layout_marginLeft="6sp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.07.14-2016.7.31"/>
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_voucher_item"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/color_dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"/>

    </RelativeLayout>

</LinearLayout>