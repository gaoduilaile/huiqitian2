<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 标题  ： 每日精选-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/color_f5f5f5"
        android:gravity="center">

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_fa6d25" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="超值搭配"
            android:textColor="@color/color_fa6d25"
            android:textSize="12dp" />

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_fa6d25" />
    </LinearLayout>

    <!-- 商品-->
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_3eb8fb"
        android:layout_width="match_parent"
        android:layout_height="136dp">
        <!-- 商品部分-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_match_one_pic"
                    android:layout_marginTop="@dimen/y1"
                    android:layout_marginLeft="11dp"
                    android:scaleType="fitCenter"
                    android:layout_width="76dp"
                    android:layout_height="76dp" />
                <TextView
                    android:layout_marginTop="6dp"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_match_one_pic"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <ImageView
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="37dp"
                android:src="@mipmap/icon_my_yijianfankui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_match_two_pic"
                    android:layout_marginTop="@dimen/y1"
                    android:scaleType="fitCenter"
                    android:layout_width="76dp"
                    android:layout_height="76dp" />
                <TextView
                    android:layout_marginTop="6dp"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_match_two_pic"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <ImageView
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="37dp"
                android:src="@mipmap/icon_my_yijianfankui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_match_three_pic"
                    android:layout_marginTop="@dimen/y1"
                    android:scaleType="fitCenter"
                    android:layout_width="76dp"
                    android:layout_height="76dp" />
                <TextView
                    android:layout_marginTop="6dp"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_match_three_pic"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 价格部分-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_match_old_money"
                android:textColor="@color/color_999999"
                android:textSize="12dp"
                android:text="@string/price_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_match_good_money"
                android:layout_toRightOf="@+id/tv_match_old_money"
                android:textSize="12dp"
                android:text="@string/price_cheap"
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_match_good_money"
                android:id="@+id/tv_match_money_icon"
                style="@style/text_home_money_icon" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_match_money_icon"
                android:id="@+id/tv_match_now_money"
                style="@style/text_home_money"
                android:layout_marginLeft="@dimen/dimen_2"
                android:text="123" />
            <Button
                android:background="@mipmap/icon_menu_quqianggou"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="12dp"
                android:text="@string/buy_soon"
                android:layout_width="80dp"
                android:layout_height="21dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>