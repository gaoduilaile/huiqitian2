<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:text="因为有你的意见我们才可以做到更好"/>

    <EditText
        android:id="@+id/tv_opinion_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="13dp"
        android:background="@color/color_f5f5f5"
        android:textColor="@color/color_999999"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginTop="67dp"
        android:gravity="right"
        android:text="@string/opinion_content_length_marge" />


        <TextView
            android:id="@+id/tv_opinion_commit"
            android:layout_width="193dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:background="@drawable/bg_selector_commit"
            android:gravity="center"
            android:text="@string/opinion_commit"
            android:textColor="@color/tv_exist_account"
            android:textSize="16sp"/>


</LinearLayout>