<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/bg_ly"
    android:orientation="horizontal"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">


    <CheckBox
        android:id="@+id/cb_cart_item"
        android:layout_width="20dp"
        android:layout_height="@dimen/dimen_20"
        android:layout_gravity="center_vertical"
        android:background="@drawable/checkbox_style"
        android:button="@null"
        android:checked="false"
        android:padding="@dimen/dimen_2" />


    <ImageView
        android:id="@+id/iv_cart_item_goods"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:src="@mipmap/img_goods_default" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp">


        <TextView
            android:id="@+id/tv_cart_item_goodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/color_title_text"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentBottom="true">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_find_result_dollar"
                    android:textColor="@color/find_text"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_cart_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/find_text"
                    android:textSize="14sp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:id="@+id/ll_item_buyNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_cart_goodsNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_changeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:background="@drawable/cart_change_num"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_cart_item_sub"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="â€”"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:background="@color/color_title_line" />

                    <TextView
                        android:id="@+id/tv_cart_item_num"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:background="@color/color_title_line" />

                    <TextView
                        android:id="@+id/tv_cart_item_add"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="18sp" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>