<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="#00000000" />
    <!--调节边角-->
    <corners
        android:topLeftRadius="@dimen/dimen_3"
        android:topRightRadius="@dimen/dimen_3"
        android:bottomLeftRadius="@dimen/dimen_3"
        android:bottomRightRadius="@dimen/dimen_3"
        />
    <!-- 设置一个白色边框 -->
    <stroke
        android:width="@dimen/dimen_1"
        android:color="#dddddd" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="@dimen/dimen_2"
        android:left="@dimen/dimen_2"
        android:right="@dimen/dimen_2"
        android:top="@dimen/dimen_2" />

</shape>